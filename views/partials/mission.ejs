<div class="tab-pane fade" id="mission" role="tabpanel" aria-labelledby="contact-tab">
    <form>
        <div class="row mission-lane">
            <div class="form-floating col">
                <select class="form-select" aria-label="Catégorie d'intervention" id="form-categorie" name="categorie">
                    <option value="A">A</option>
                    <option value="B">B</option>
                    <option value="C">C</option>
                </select>
                <label for="form-categorie" class="form-label">Catégorie d'intervention :</label>
            </div>
            <div class="form-floating col">
                <select class="form-select" aria-label="Sous-Catégorie d'intervention" id="from-subcategorie" name="subcategorie" disabled>
                    <option value="A">-</option>
                </select>
                <label for="form-subcategorie" class="form-label">Sous-Catégorie d'intervention :</label>
            </div>
        </div>
        <div class="row g-3 mission-lane">
            <div class="form-floating col-sm">
                <input type="text" id="form-city" class="form-control" placeholder="Commune de l'intervention" aria-label="city" name="city">
                <label for="form-city" class="form-label">Commune de l'intervention :</label>
            </div>
            <div class="form-floating col-sm-7">
                <input type="text" id="form-address" class="form-control" placeholder="Adresse de l'intervention" aria-label="address" name="address" disabled>
                <label for="form-address" class="form-label">Adresse de l'intervention :</label>
            </div>
        </div>
        <div class="row g-3 mission-lane">
            <div class="form-floating col-sm-7">
                <textarea class="form-control" placeholder="Observations :" id="form-observations" name="observations" style="height: 100px"></textarea>
                <label for="form-observations">Observations :</label>
            </div>
            <div class="col-sm">
                <div class="container">
                    <div class="row transfert-grp">
                        <div class="col">
                            <input type="radio" class="btn-check" name="options" id="samu" autocomplete="off">
                            <label class="btn btn-success" for="samu">Transfert SAMU</label>
                        </div>
                        <div class="col">
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12">
                            <input type="radio" class="btn-check" name="options" id="police" autocomplete="off">
                            <label class="btn btn-primary" for="police">Transfert Police</label>
                            <input type="radio" class="btn-check" name="options" id="gendarmerie" autocomplete="off">
                            <label class="btn btn-primary" for="gendarmerie">Transfert Gendarmerie</label>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-12">
            <button class="btn btn-success" type="submit">Déclancher les Secours</button>
            <button class="btn btn-danger" type="submit">Annuler l'engagement</button>
        </div>
    </form>
</div>